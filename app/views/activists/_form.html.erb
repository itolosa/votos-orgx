<%= form_for(@activist) do |f| %>
  <% if @activist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@activist.errors.count, "error") %> prohibited this activist from being saved:</h2>

      <ul>
      <% @activist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :section %><br>
    <%= f.collection_select(:section_id, Section.all, :id, :name, {}, {class: 'form-control'})%>
  </div>
  <div class="form-group">
    <%= f.label :fronts %><br>
    <%= f.collection_check_boxes(:front_ids, Front.all, :id, :name) do |c| %>
      <div class="checkbox">
        <label>   
          <%= c.check_box %>
          <%= c.object.name %>
        </label>
      </div>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit(class: 'btn btn-success') %>
  </div>
<% end %>
